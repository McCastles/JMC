{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "https://github.com/McCastles/JMC/blob/master/examples/more-definitions.json",
    "title": "Schema With Definitions",
    "type": "object",
    "description": "schema with definitions",

    "definitions": {
     	"price": {
        	"title": "Price",
        	"description": "Price of the product",
        	"type": "number"
    	},
    	"address": {
    		"type": "object",
    	    "description": "The addres of somebody",
    	    "properties": {
    	    	"street": {
    	    		"description": "Street adress",
    	        	"type": "string"
    	    	},
    	   		"city": {
    	   			"description": "Current city",
    	   			"type": "string"
    	   		},
    	   		"state": {
    	   			"description": "Current state",
    	   		    "type": "string"
    	   		}
    	    },
    	    "required": [
				"street",
				"city",
				"state"
			]
    	}
	},

    "properties": {
		"priceArray" : {
        	"type": "array",
			"items": {
				"$ref": "#price",
				"description": "Price the customer will pay for the product"
			}
		},

    	"name": {
        	"type": "object",
        	"description": "Name of the client",
        	"properties": {
        		"firstName": {
        	    	"type": "string",
        	    	"description": "First name"
        	  	},
        	  	"secondName": {
        	    	"type": "string",
        	    	"description": "Second name"
        	  	}
        	},
        	"required": [
				"secondName"
			]
		},
		
    	"billing_address": {
    		"$ref": "#address",
    		"description": "Billing adress"
		},
		
    	"shipping_address": {
        	"$ref": "#address",
        	"description": "Shipping adress"
		}
    }
}