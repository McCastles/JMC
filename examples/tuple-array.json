{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "https://github.com/McCastles/JMC/blob/master/examples/tuple-array.json",
    "title": "tuple array schema",
    "description": "schema with a tuple array (array with items of different types)",
    "type": "object",
    "required": [ 
        "people" 
    ],
    "properties": {
        "sampleArray": {
            "type":"array",
            "items": [
                {
                    "type":"number"
                },
                {
                    "type":"string"
                }
            ]
        },
        "people": {
            "description": "famous people",
            "type": "array",
            "items": [
                {
                    "description": "name of the person",
                    "type": "string"
                },
                {
                    "description": "is male?",
                    "type": "boolean"
                },
                {
                    "description": "telephone number of the person",
                    "type": "number"
                }       
            ]
        }
    }
}