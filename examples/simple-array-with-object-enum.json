{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "https://github.com/McCastles/JMC/blob/master/examples/simple-array-with-object-enum.json",
  "title": "Example Array With Object Enum Schema",
  "description": "Simple schema with array (one of the values is an object) with enumerated values",
  "type": "object",
  "required": [
    "people"
  ],
  "properties": {
    "people": {
      "description": "List of guests",
      "type": "array",
      "items": [
        {
          "type": "string",
          "description": "Guest's surname",
          "enum": ["Lennon","McCartney","Harrison","Starr"]
        },
        {
          "type": "number",
          "description": "Place"
        },
        {
          "type": "object",
          "description": "children of the person",
          "required": ["name","surname"],
          "properties": {
            "name": {
              "description": "name of the kid",
              "type": "string"
            },
            "surname": {
              "description": "surname of the kid",
              "type": "string"
            },
            "telephone": {
              "description": "telephone number of the kid",
              "type": "number"
            }
          }
        }
      ]
    }
  }
}