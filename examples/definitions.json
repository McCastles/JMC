{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "https://github.com/McCastles/JMC/blob/master/examples/simple/simple-definitions.json",
    "title": "Simple Schema With Definitions",
    "type": "object",
    "description": "Simple schema with definitions",
	"required": ["shipping_address"],

    "definitions": {
    	"address": {
        	"type": "object",
	        "description": "The addres of somebody",
    	    "properties": {
        	  	"street": {
            		"description": "Street adress",
            		"type": "string"
	        	},
    	      	"city": {
        	    	"description": "Current city",
            		"type": "string"
 	         	},
    	      	"state": {
        	    	"description": "Current state",
            		"type": "string"
          		}
        	},
        	"required": [
				"street",
				"city",
				"state"
			]
		},
		"testArray": {
			"type": "array",
			"description": "The array for testing",
			"format": "date-time",
			"items": {
				"type": "object",
				"properties": {
					"p1": {
						"type": "string",
						"format": "regex",
						"description": "test property"
					}
				}
			}
		}
    },
    
    "properties": {
    	"name": {
        	"type": "object",
  	      	"description": "Name of the client",
    	    "properties": {
        	  	"firstName": {
            		"type": "string",
					"description": "First name",
					"format": "hostname"
    	      	},
        	  	"email": {
            		"type": "string",
					"description": "email",
					"format":"email"
     	     	}
       		},
        	"required": [
			"email"
			]
    	},

    	"billing_address": {
    		"$ref": "#address",
        	"description": "Billing adress"
    	},
      
 	   "shipping_address": {
			"description": "The shipping address - extends address",
			"allOf": [
				{ "$ref": "#/definitions/address" },
				{ "properties": {
					"type": {
						"type":"string",
						"description": "Business or Residental"
					}
				},
					"required": ["type"]
				}
			]
		}
	}
}