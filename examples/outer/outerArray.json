{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Definitions for outerTest",
  "$id": "https://github.com/McCastles/JMC/blob/master/examples/outerArray.json",
  "description": "Illustrating work with outer definitions file",
  "type": "object",
  "properties": {
    "name": {
      "type": "object",
      "description": "Name of the client",
      "properties": {
        "firstName": {
          "type": "string",
          "description": "First name"
        },
        "secondName": {
          "type": "string",
          "description": "Second name"
        }
      },
      "required": ["secondName"]
    },
    "adresses": {
      "description": "array of adresses",
      "type": "array",
      "items": {
        "$ref": "./outerDef.json#address"
      }
    },
    "billing_address": {
      "$ref": "./outerDef1.json#address",
      "description": "Billing adress"
    },
    "shipping_address": {
      "$ref": "./outerDef1.json#address",
      "description": "Shipping adress"
    }
  }
}