{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id":"https://github.com/McCastles/JMC/blob/master/examples/tuple-array-enum.json",
    "title": "Example Array Enum Schema",
    "description": "tuple array schema",
    "type": "object",
    "required": [ "people" ],
    "properties": {
      	"people": {
        	"description": "List of guests",
        	"type": "array",
        	"items": [
        		{
            		"type": "string",
            		"description": "Guest's surname",
					"enum": [ 
						"Lennon",
						"McCartney",
						"Harrison", 
						"Starr"
					],
            		"default": "Starr"
          		},
          		{	
            		"type": "number",
            		"description": "Place"
          		}
        	]
      	}
    }
}