{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "https://github.com/McCastles/JMC/blob/master/examples/tuple-array-with-object.json",
    "title": "Tuple array schema with object",
    "description": "schema with a tuple array (array with items of different types), one of which is an object",
    "type": "object",
    "required":[ 
        "people" 
    ],
    "properties": {
        "people": {
            "description": "famous people",
            "type": "array",
            "items": [
                {
                    "description": "name of the person",
                    "type": "string"
                },
                {
                    "description": "is male?",
                    "type": "boolean"
                },
                {
                    "description": "telephone number of the person",
                    "type": "number"
                },
                {
                    "description": "children of the person",
                    "type": "object",
                    "required": [
                        "name", 
                        "surname"
                    ],
                    "properties": {
                        "name": {
                            "description": "name of the kid",
                            "type": "string"
                        },
                        "surname": {
                            "description": "surname of the kid",
                            "type": "string"
                        },
                        "telephone": {
                            "description": "telephone number of the kid",
                            "type": "number"
                        }
                    }   
                }       
            ]
        }
    }
}