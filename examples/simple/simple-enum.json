{
	"$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "https://github.com/McCastles/JMC/blob/master/examples/simple/simple-enum.json",
	"title": "Example Enum Schema",
	"description": "Simple schema",
	"type": "object",
	"properties": {
		"size": {
			"format": "uri",
			"description": "Size",
			"type": "string",
			"default": "small",
			"enum": [ 
				"big", 
				"medium", 
				"small", 
				42 
			]
		},
		"color": {
			"enum": ["green", "yellow", "red"],
			"default": "green"
		}  
	}
}