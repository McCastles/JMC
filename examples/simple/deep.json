{
	"$schema": "http://json-schema.org/draft-04/schema#",
    "$id":"https://github.com/McCastles/JMC/blob/master/examples/simple/deep.json",
    "title": "Example Schema",
    "description": "simple schema which illustrates the chain of properties",
    "type": "object",
    "required": [
        "planet"
    ],
    "properties": {
    	"planet": {
        	"description": "your planet",
        	"type": "object",
        	"properties": {
        		"continent": {
            		"description": "your continent",
            		"type": "object",
            		"properties": {
            			"country": {
                			"description": "your country",
                			"type": "object",
                			"properties": {
                				"city": {
                    			"description": "your city",
                    			"type":"string"
                				}
                			}
              			}
            		}
          		}
        	}
      	}
    }
  }