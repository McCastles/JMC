{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "https://github.com/McCastles/JMC/blob/master/examples/simple/simple-definitions.json",
    "title": "Simple Schema With Definitions",
    "type": "object",
    "description": "Simple schema with definitions",

    "definitions": {
    	"address": {
        	"type": "object",
	        "description": "The addres of somebody",
    	    "properties": {
        	  	"street": {
            		"description": "Street adress",
            		"type": "string"
	        	},
    	      	"city": {
        	    	"description": "Current city",
            		"type": "string"
 	         	},
    	      	"state": {
        	    	"description": "Current state",
            		"type": "string"
          		}
        	},
        	"required": [
				"street",
				"city",
				"state"
			]
      	}	
    },
    
    "properties": {
    	"name": {
        	"type": "object",
  	      "description": "Name of the client",
    	    "properties": {
        	  	"firstName": {
            		"type": "string",
            		"description": "First name"
    	      	},
        	  	"secondName": {
            		"type": "string",
            		"description": "Second name"
     	     	}
       		},
        	"required": [
			"secondName"
			]
    	},

    	"billing_address": {
    		"$ref": "#address",
        	"description": "Billing adress"
    	},
      
 	   "shipping_address": {
    	   	"$ref": "#address",
       		"description": "Shipping adress"
   		}
	}
}